<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - PetShop</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
 <nav class="navbar navbar-inverse navbar-fixed-top"">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-2">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("PetShop", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    @if (User.Identity.IsAuthenticated)
                    {

                        <li>@Html.ActionLink("Buy Animal", "Index", "Buys")</li>
                        <li>@Html.ActionLink("Customers", "Index", "Customers")</li>
                        <li>@Html.ActionLink("Pets", "Index", "Pets")</li>


                    }
                    @if (User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("View Role", "Index", "Role")</li>
                        <li>@Html.ActionLink("Create Role", "Create", "Role")</li>
                        <li>@Html.ActionLink("Assign Role", "RegisterRole", "Account")</li>
                    }

                    </ul>
                
                <ul class="nav navbar-nav navbar-right">
                     @Html.Partial("_LoginPartial")
                </ul>
            </div>
        </div>
    </nav>

    @RenderBody()
</body>
</html>